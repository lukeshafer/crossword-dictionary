{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "verbatimModuleSyntax": true,
    "noUnusedParameters": true,
    "target": "ES2022",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "../core/src/*"
      ]
    }
  }
}
